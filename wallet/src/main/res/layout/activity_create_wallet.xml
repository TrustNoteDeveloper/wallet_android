<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize"
        android:paddingLeft="@dimen/page_margin_left"
        android:paddingRight="@dimen/page_margin_left">

        <org.trustnote.wallet.widget.NonSwipeableViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

    <org.trustnote.wallet.widget.keyboard.CustomKeyboardView

        android:id="@+id/keyboard_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:padding="@dimen/keyboard_padding"
        android:paddingTop="@dimen/line_gap_6"
        android:background="@color/t_f_gray_2"
        android:keyBackground="@drawable/key_background"
        android:keyTextColor="@color/t_text"
        android:keyTextSize="@dimen/keyboard_textsize"
        android:visibility="gone" />

</FrameLayout>
