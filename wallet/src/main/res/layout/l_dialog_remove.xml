<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:orientation="vertical">

    <ImageView

        android:id="@+id/ic"
        android:src="@drawable/ic_garbage_bin"
        android:layout_marginTop="@dimen/line_gap_32"
        android:layout_width="@dimen/ic_gabage_width"
        android:layout_height="@dimen/ic_gabage_width" />

    <TextView
        android:id="@+id/msg"
        style="@style/t_text_dialog_msg"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/line_gap_12"
        android:lineSpacingMultiplier = "1.5"
        android:paddingLeft="@dimen/bg_dialog_padding_left"
        android:paddingRight="@dimen/bg_dialog_padding_left"
        android:paddingTop="@dimen/bg_dialog_padding_top"
        android:text="@string/me_wallet_remove_wallet_msg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/first_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/cancel"
            android:textColor="#FF333333"
            android:textSize="@dimen/dialog_btn_font" />


        <Button
            android:id="@+id/second_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:text="@string/confirm"
            android:textColor="#FF007AFF"
            android:textSize="@dimen/dialog_btn_font" />

    </LinearLayout>

</LinearLayout>