<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="@dimen/one_dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/page_header_height"
        android:background="@color/page_title_bg"
        android:gravity="left|center_vertical">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="@dimen/page_header_ic_height"
            android:layout_height="@dimen/page_header_ic_height"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/page_margin_left"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/title"
            style="@style/t_sub_title"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/line_gap_6"
            android:layout_toRightOf="@id/icon"
            android:textSize="@dimen/text_16" />

    </RelativeLayout>

</FrameLayout>
